{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": [],
    "target": "ES2017",
    "paths": {
      "@ui-components": [
        "libs/ui-components/src/libs.ts"
      ],
      "@trello-clone/trello-mocks": [
        "libs/trello-mocks/src/index.ts"
      ],
      "@trello-clone/trello-interface": [
        "libs/trello-interface/src/index.ts"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
